            @Html.ValidationMessageFor(model => model.prezzo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Cottura, htmlAttributes: new { @class = "control-label col-md-2" })
