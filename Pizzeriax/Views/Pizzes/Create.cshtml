            @Html.TextBox("uploadfile", "", htmlAttributes: new { @class = "form-control", @type = "file" })
            @Html.ValidationMessageFor(model => model.imgURL, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.prezzo, htmlAttributes: new { @class = "control-label col-md-2" })
