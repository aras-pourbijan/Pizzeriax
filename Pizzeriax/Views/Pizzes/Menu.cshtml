@model IEnumerable<Pizzeriax.Models.Pizze>

@{
    ViewBag.Title = "Menu";
}


<h2 class="mt-5 ">Il nostro menu</h2>


<div class="mt-3 row justify-content-center">


    @foreach (var item in Model)
    {
        <div class="card col-sm-12 col-md-6 col-lg-4 m-2" style="width: 18rem;">
            <img src="~/Content/img/@item.imgURL" alt="pizza foto" style="width: 100%; height: 20vw; object-fit: cover;" class="mx-0 px-0 img-fluid" />
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayFor(modelItem => item.NomePizza)</h4>
                @*<h6 class="card-title">@Html.DisplayNameFor(model => model.Ingredienti)</h6>*@
                <p class="card-text">@Html.DisplayFor(modelItem => item.Ingredienti)</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"> @Html.DisplayNameFor(model => model.Cottura) in  @Html.DisplayFor(modelItem => item.Cottura)m | @Html.DisplayFor(modelItem => item.prezzo) € </li>
            </ul>
            <div class="card-body">
                <form class="card 02">
                    <div class="input-group">
                        <input type="number" class="form-control" min="0" max="10" placeholder="quantita">
                        <button type="submit" class="btn btn-secondary">Aggiungi</button>
                    </div>
                </form>
            </div>
        </div>

    }

</div>
